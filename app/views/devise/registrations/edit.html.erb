<h2>Modifica Profilo </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :password %> <i>(Lascia vuoto se non vuoi cambiare)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control", placeholder:"Password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.label :conferma_password %><br />
    <%= f.password_field :conferma_password, autocomplete: "new-password", class:"form-control", placeholder:"Password" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_attuale %> <br />
    <%= f.password_field :password_attuale, autocomplete: "password_attuale", class:"form-control", placeholder:"Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambia", class:'btn btn-dark' %>
  </div>
<% end %>
<br>
<div class="card">
  <div class="card-header">
    <h4>Cancella il mio account</h4>
  </div>
  <div class="card-body">
    <h5 class="card-title">Non soddisfatto?</h5>
    <p class="card-text"><%= button_to "Cancella il mio account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'btn btn-danger' %></p>
    
    
  </div>
</div>



<br>
<%= link_to "Indietro", :back, class:'btn btn-secondary' %>

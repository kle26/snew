


<h1>Prodotti</h1>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Marca</th>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Contenuto</th>
      <th>Utilizzo</th>
      <th>Media voti</th>
       <th>Immagine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prodottos.each do |prodotto| %>
      <tr>
        <td><%= prodotto.marca %></td>
        <td><%= prodotto.nome %></td>
        <td><%= prodotto.categoria %></td>
        <td><%= prodotto.contenuto %></td>
        <td><%= prodotto.utilizzo %></td>
        <td><%= prodotto.media_voti %></td>
        <td>
          <%if prodotto.image_url%>
            <%= image_tag prodotto.image.url, width: "100px"%>
          <%end%>
        </td>





        <td><%= link_to 'Visualizza', prodotto %></td>
        <%if current_user&.dermatologo?%>
          <td><%= link_to 'Modifica', edit_prodotto_path(prodotto) %></td>
          <td><%= link_to 'Cancella', prodotto, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if current_user&.dermatologo?%>
  <%= link_to 'Nuovo Prodotto', new_prodotto_path,class:"btn btn-dark" %>
<%end%>

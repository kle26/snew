<%= form_with(model: prodotto) do |form| %>
  <% if prodotto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(prodotto.errors.count, "error") %> prohibited this prodotto from being saved:</h2>

      <ul>
        <% prodotto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :marca %>
    <%= form.text_field :marca, class:"form-control",placeholder: "Marca" %>
  </div>

  <div class="field form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, class:"form-control", placeholder: "Nome"%>
  </div>

  
 <br>
  <div class="field form-group">
    <%= form.label :categoria %>
    <%= form.select :categoria,['Viso','Corpo','Capelli'] ,class:"form-control", placeholder: "Categoria"%>

  </div>
   
   <br/>

  <div class="field form-group">
    <%= form.label :contenuto %>
   <%= form.text_area :contenuto,cols: 40, rows: 2,class:"form-control", placeholder: "Contenuto" %>
  </div>
    

  <div class="field form-group">
    <%= form.label :utilizzo %>
    <%= form.text_area :utilizzo,cols: 40, rows: 3, class:"form-control",placeholder: "Utilizzo" %>
  </div>

  <div class="field form-group">
    <%= form.label :media_voti %>
    <%= form.number_field :media_voti, class:"form-control", placeholder: "Media Voti" %>
  </div>

  <div class="field form-group">
    
    <%= form.number_field :user_id,id: :prodotto_user_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>

  <div class="field form-group">
    <%= form.label :aggiungi_immagine %>
    <%= form.file_field :image, class:"form-control" %>
    <%= form.hidden_field :image_cache %>
  </div>


  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
